{
  "name": "omnis-vite-control",
  "version": "0.2.0",
  "type": "module",
  "scripts": {
    "build": "pnpm run type-check && vite build && mkdir dist/omnis-vite-control && mv dist/omnis-vite-control.html dist/omnis-vite-control/omnis-vite-control.htm",
    "watch": "vite build --watch",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "format": "prettier --write .",
    "type-check": "tsc -p tsconfig.app.json --noEmit --composite false",
    "type-watch": "tsc --watch -p tsconfig.app.json --noEmit --composite false",
    "precommit-msg": "echo 'Pre-commit checks...' && exit 0"
  },
  "pre-commit": [
    "precommit-msg",
    "format",
    "lint"
  ],
  "dependencies": {
  },
  "devDependencies": {
    "@tsconfig/node18": "^18.2.4",
    "@types/node": "^24.6.2",
    "@vitest/eslint-plugin": "^1.3.15",
    "copyfiles": "^2.4.1",
    "eslint": "^9.36.0",
    "pre-commit": "^1.2.2",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vite": "^7.1.8",
    "vite-plugin-html": "^3.2.2",
    "vite-plugin-multiple": "^0.2.0",
    "vite-plugin-singlefile": "^2.3.0",
    "vite-plugin-static-copy": "^3.1.3"
  }
}
